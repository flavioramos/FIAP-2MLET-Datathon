{
	"info": {
		"_postman_id": "945d12b2-7419-41d1-a9b7-5fdd3aace877",
		"name": "Flask Model Server",
		"description": "Collection for the Flask Model Server API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "384806"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.access_token) {",
									"    pm.environment.set('auth', jsonData.access_token);",
									"    console.log('Access token has been set');",
									"} else {",
									"    console.log('No access token in response');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"teacher\",\n    \"password\": \"mlet-password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"login"
							]
						},
						"description": "Login endpoint to get JWT token"
					},
					"response": []
				}
			]
		},
		{
			"name": "Model Operations",
			"item": [
				{
					"name": "Train Model",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/train",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"train"
							]
						},
						"description": "Train the job matching model"
					},
					"response": []
				},
				{
					"name": "Make Prediction",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"principais_atividades\": \"Sample job activities\",\n    \"competencia_tecnicas_e_comportamentais\": \"Sample technical and behavioral competencies\",\n    \"cv_pt\": \"Sample candidate CV text\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/predict",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"predict"
							]
						},
						"description": "Make a prediction using the trained model"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "your_access_token_here",
			"type": "string"
		}
	]
}